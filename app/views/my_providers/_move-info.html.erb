<div class="container container-overview mb-3">

    <div class="text-left move align-items-center">

          <h2><i class="fas fa-info-circle"></i></h2>
          <h5>Your new address</h5>
          <h4><%= @move.address_string %></h4><br>

          <h2><i class="fas fa-calendar-alt"></i></h2>
          <h5>Your moving date</h5>
          <h4><%= (@move.moving_date).strftime("%d/%m/%Y") %></h4>

          <div class=" mt-3">
            <h6> <%= pluralize( (@move.moving_date - Date.today).to_i, 'Day' ) %> remaining until then!</h6>
          </div>

    </div>


    <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>


</div>

