<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= yield(:navbar_class) %>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://cdn2.iconfinder.com/data/icons/contact-us-7/64/Contact_Us-56-512.png", width: '30',  height: '30' %>
    <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
       <% if user_signed_in? %>
         <li class="nav-item active">
           <%= link_to "My Dashboard", my_providers_path, class: "nav-wagon-link mr-5 my-3" %>
         </li>

         <li class="nav-item active">
           <%= link_to "Create new Move", new_move_path, class: "nav-wagon-link mr-3" %>
         </li>

         <li class="nav-item dropdown">
             <%= image_tag "kimavatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
           <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
             <%= link_to "Update Profile", edit_user_registration_path, class: "dropdown-item" %>
             <%= link_to "FAQ", "#", class: "dropdown-item" %>
             <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
           </div>
         </li>

       <% else %>
         <li class="nav-item">
           <%= link_to "Sign up", new_user_registration_path, class: "nav-wagon-link " %>
         </li>
         <li class="nav-item">
           <%= link_to "Log in", new_user_session_path, class: "nav-wagon-link px-3" %>
         </li>
       <% end %>
     </ul>

  </div>

</div>



